{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "es2018",                          
    "module": "commonjs",                    
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
